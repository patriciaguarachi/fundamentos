#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "stdlib.h"

using namespace std;
void main ()
{
 int a , b, c ,r ,opcion;
 cout<<"ingrese a y b"<<endl;
 cin>>a>>b;
do
{
 cout<<"1.suma\n";
 cout<<"2.resta\n";
 cout<<"3.multiplicacion\n";
 cout<<"4.division\n";
 cout<<"0.salir\n";
 cin>> opcion;
switch(opcion)
	{
	case 1:r=a+b; break;
	case 2:r=a-b; break;
	case 3:r=a*b; break;
	case 4:r=a/b; break;
	case 0: cout<< "salir"<<endl;
		break;
	default:cout<< "error"<<endl;
    }
if(opcion)
	getch();
	system ("cls");
}while (opcion!=0);
	getch();
}
